---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/web/Navbar.astro";
import Footer from "../components/web/Footer.astro";
import FormMessage from "../components/web/FormMessage.astro";
---

<script>
    let maps = document.getElementsByClassName("map");
    Array.from(maps).forEach(function(map) {
        map.addEventListener("click", function(){
            selectMap(this.getAttribute("data-map"))
        });
    });

    function selectMap(mapUrl) {
        var frame = document.getElementById('mapa');
        frame.src = mapUrl;
    }
</script> 

<Layout title="Contáctanos">
    <Navbar />
    <section class="py-20 section__contact flex items-center justify-center">
