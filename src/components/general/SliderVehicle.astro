---
interface Props {
    name: string;
    image: string;
    detail: string;
    price: string;
}
const { name } = Astro.props;
const { image } = Astro.props;
const { detail } = Astro.props;
const { price } = Astro.props;
---

<li class="border-8 border-white p-4 relative h-full">
    <div class="pt-4">
        <img src={`/images/autos/${image}`} alt="auto" class="w-full" />
        <h3 class="text-xl uppercase font-semibold mt-2">{name}</h3>
    </div>
    <div class="max-h-52 border-t-8 mt-5 border-white flex items-center justify-center">
        <img src={`/images/autos/${detail}`} alt="detalle" class="w-4/5 mt-5" />
    </div>
    <div class="w-full h-full bg-black bg-opacity-90 absolute top-0 left-0 opacity-0 transition-all duration-300 hover:opacity-100">
        <a href="/">
            <div class="flex items-center justify-center bg-white w-12 h-12 rounded-full absolute top-1/2 left-1/2 -mt-12 -ml-6">
                <img src="/images/mano.png" alt="hand" width="40" />
            </div>
        </a>
        <div class="bg-yellow-400 w-full h-16 flex items-center justify-center absolute bottom-0">
            <p class="text-2xl uppercase text-center font-bold">$ {price} d√≥lares</p>
        </div>
    </div>
</li>
