---
interface Props{
    identi: string;
    price: number;
    text: string;
    // dolar: number;
    abreviatura: string;
}

const {identi} = Astro.props
const {price} = Astro.props
const {text} = Astro.props
// const {dolar} = Astro.props
const {abreviatura} = Astro.props
// let soles = (price * dolar).toFixed(2)
---
<script>
    let checkboxes = document.querySelectorAll('input[type="checkbox"]');
    Array.from(checkboxes).forEach(function (checkbox) {
        let soles = parseFloat(checkbox.value) * parseFloat(localStorage.getItem("dolar"));
        checkbox.nextElementSibling.lastChild.innerHTML = soles.toFixed(2) 
    });
</script>
<div class="w-1/3">
    <div class="flex items-start p-2">
        <input class="form-checkbox rounded mt-1" type="checkbox" data-abr={`${abreviatura}`} value={`${price}`} id={`${identi}`}>
        <label class="ml-2 text-sm label-add" for={`${identi}`}>{text} <span></span></label>
    </div>
</div>