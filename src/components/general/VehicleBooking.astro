---
interface Props {
    name: string;
    maleteras: string;
    pasajeros: string;
    caja: string;
    aire: string;
    image: string;
    precio: number;
}
const { name, maleteras, pasajeros, caja, aire, precio, image } = Astro.props;
let preciosigv = (precio / 1.18).toFixed(2);
---

<div class="flex items-center justify-center w-full md:w-11/12 mx-auto py-10 vehicle-booking">
    <div class="p-5 flex-1">
        <img src={`/images/autos/${image}`} alt="auto" class="w-4/5 mx-auto" />
    </div>
    <div class="flex flex-col p-5 flex-1">
        <h4 class="font-semibold text-base md:text-xl">{name}</h4>
        <ul class="font-semibold text-sm mt-3">
            <li>{pasajeros} Pasajeros</li>
            <li>{maleteras} Maleteras</li>
            <li>{caja}</li>
            <li>{aire}</li>
        </ul>
    </div>
    <div class="flex flex-col font-semibold p-5 flex-1">
        <p>S/ <span class="price-soles-veh"></span></p>
        <p>$ <span>{preciosigv}</span></p>
        <button
            type="button"
            class="btn-booking uppercase px-12 py-3 mt-3 bg-yellow-400 w-1/2"
            data-image={`${image}`}
            data-price={`${preciosigv}`}
            data-name={`${name}`}
            >Reservar</button
        >
    </div>
</div>
